{
  "expo": {
    "name": "recognaize-app",
    "slug": "recognaize-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/logo/app-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.graymattersolutions",
      "supportsTablet": true,
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "graymattersolutions.app",
              "pathPrefix": "/back-to-app"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "package": "com.graymattersolutions"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Lora-Regular.ttf",
            "./src/assets/fonts/Lora-Medium.ttf",
            "./src/assets/fonts/Lora-SemiBold.ttf",
            "./src/assets/fonts/Lora-Bold.ttf",
            "./src/assets/fonts/PlusJakartaSans-Regular.ttf",
            "./src/assets/fonts/PlusJakartaSans-Medium.ttf",
            "./src/assets/fonts/PlusJakartaSans-SemiBold.ttf",
            "./src/assets/fonts/PlusJakartaSans-Bold.ttf"
          ]
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "router": {
        "src": "src/app"
      }
    }
  }
}
